<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2"
	xmlns:xsi="http://xmlns.jcp.org/xml/ns/persistence"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence">
	<persistence-unit name="tienda" transaction-type="RESOURCE-LOCAL">
		
		<class>com.latam.alura.tienda.Producto</class>
	
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:tienda"/>
			<property name="javax.persistence.jdbc.user" value="sa"/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
		</properties>
	</persistence-unit>
	
</persistence>
